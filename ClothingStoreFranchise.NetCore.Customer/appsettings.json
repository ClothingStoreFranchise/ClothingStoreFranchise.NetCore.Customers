{
  "spring": {
    "application": {
      "name": "Customers"
    }
  },
  "eureka": {
    "client": {
      "shouldRegisterWithEureka": true,
      "serviceUrl": "http://localhost:8081/eureka/",
      "ValidateCertificates": false
    },
    "instance": {
      "appName": "Customers",
      "instanceId": "localhost:4550",
      "hostName": "localhost",
      "port": "4550"
    }
  },

  "Jwt": {
    "Config": {
      "Type": "signed"
    }
  },

  "rabbitMq": {
    "namespace": "customers",
    "retries": 3,
    "retryInterval": 2,
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 15672,
    "hostnames": [
      "localhost"
    ],
    "requestTimeout": "00:00:10",
    "publishConfirmTimeout": "00:00:01",
    "recoveryInterval": "00:00:10",
    "persistentDeliveryMode": true,
    "autoCloseConnection": true,
    "automaticRecovery": true,
    "topologyRecovery": true,
    "exchange": {
      "durable": true,
      "autoDelete": false,
      "type": "Topic"
    },
    "queue": {
      "autoDelete": false,
      "durable": true,
      "exclusive": false
    }
  },

  "DatabaseConnection": 
    "data source=localhost\\SQLEXPRESS; initial catalog=Customer; Trusted_Connection=True;MultipleActiveResultSets=true",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "SwaggerOptions": {
    "JsonRoute": "swagger/{documentName}/swagger.json",
    "Description": "Our API",
    "UIEndpoint": "v1/swagger.json"
  }
}
